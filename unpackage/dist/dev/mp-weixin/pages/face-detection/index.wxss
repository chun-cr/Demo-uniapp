.page-container {
  width: 100%;
  height: 100vh;
  background-color: #000;
  position: relative;
  overflow: hidden;
}
.camera-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}
.face-rect {
  position: absolute;
  border: 2px solid #3efefe;
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(62, 254, 254, 0.5);
}
.face-rect .face-rect-border {
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 8px;
}
.face-point {
  position: absolute;
  width: 4px;
  height: 4px;
  background-color: #3efefe;
  border-radius: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  box-shadow: 0 0 4px rgba(62, 254, 254, 0.8);
}
.center-area {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 100px;
  height: 100px;
}
.center-area .center-rect {
  width: 100%;
  height: 100%;
  border: 1px dashed rgba(255, 255, 255, 0.3);
  border-radius: 10px;
}
.center-area .center-dot {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 6px;
  height: 6px;
  background-color: #ff3b30;
  border-radius: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.control-panel {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.9), transparent);
  padding: 20rpx;
  padding-bottom: env(safe-area-inset-bottom);
}
.status-info {
  text-align: center;
  margin-bottom: 20rpx;
}
.status-info .status-text {
  font-size: 28rpx;
  font-weight: bold;
  padding: 10rpx 30rpx;
  border-radius: 50rpx;
  display: inline-block;
}
.status-info .status-text.status-default {
  background-color: rgba(255, 255, 255, 0.1);
  color: #fff;
}
.status-info .status-text.status-scanning {
  background-color: rgba(62, 254, 254, 0.2);
  color: #3efefe;
}
.status-info .status-text.status-success {
  background-color: rgba(52, 199, 89, 0.2);
  color: #34c759;
}
.status-info .status-text.status-warning {
  background-color: rgba(255, 149, 0, 0.2);
  color: #ff9500;
}
.status-info .status-text.status-error {
  background-color: rgba(255, 59, 48, 0.2);
  color: #ff3b30;
}
.status-info .status-text.status-info {
  background-color: rgba(0, 122, 255, 0.2);
  color: #007aff;
}
.status-info .countdown {
  display: block;
  font-size: 32rpx;
  color: #3efefe;
  margin-top: 10rpx;
  font-weight: bold;
}
.button-group {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
  gap: 20rpx;
}
.btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 30rpx;
  border: none;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
  min-width: 200rpx;
  transition: all 0.3s;
}
.btn:active {
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
}
.btn:disabled {
  opacity: 0.5;
  -webkit-filter: grayscale(1);
          filter: grayscale(1);
}
.btn .btn-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}
.btn .btn-text {
  font-size: 24rpx;
  color: #fff;
}
.btn.start-btn {
  background: linear-gradient(135deg, #34c759, #2ecc71);
}
.btn.stop-btn {
  background: linear-gradient(135deg, #ff3b30, #ff375f);
}
.btn.restart-btn {
  background: linear-gradient(135deg, #007aff, #5856d6);
}
.btn.flip-btn {
  background: linear-gradient(135deg, #5ac8fa, #34c759);
}
.result-container {
  background-color: #000;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.result-container .result-image {
  flex: 1;
  width: 100%;
}
.result-container .result-info {
  background: rgba(0, 0, 0, 0.8);
  padding: 30rpx;
}
.result-container .result-info .result-title {
  display: block;
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}
.result-container .result-info .info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.result-container .result-info .info-item .label {
  color: #999;
  font-size: 28rpx;
}
.result-container .result-info .info-item .value {
  color: #3efefe;
  font-size: 28rpx;
  font-weight: bold;
}
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}
.loading-overlay .loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.1);
  border-top-color: #3efefe;
  border-radius: 50%;
  -webkit-animation: spin 1s linear infinite;
          animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}
.loading-overlay .loading-text {
  color: #fff;
  font-size: 28rpx;
}
@-webkit-keyframes spin {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
@keyframes spin {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}

